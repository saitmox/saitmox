<html>
<head>
<title></title>
<script type="text/javascript" src="jquery-1.8.0.min.js"></script>
<script type="text/javascript" src="keymap.js"></script>
<script type="text/javascript">
//<![CDATA[

var g_obShell = new ActiveXObject("WScript.Shell");

//--------------------------------------//
// キーイベント
//--------------------------------------//
document.onkeyup = function() {
	var nKeyCode = undefined;
	if (event.shiftKey) {
		nKeyCode = g_keyMapShift[event.keyCode];
	}
	if (!nKeyCode) {
		nKeyCode = g_keyMap[event.keyCode];
	}
	if (nKeyCode) {
		var sKeyCode = String(nKeyCode);
		var sCommand = "adb shell input keyevent " + sKeyCode;
		g_obShell.Run(sCommand, 0);
	}
	$("#key_disp").prepend($("<div>").text(
		"event.keyCode:" + event.keyCode
	));
}

//]]>
</script>
</head>
<body>

<div id="key_disp">
</div>

</body>
</html>